    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">

    <br>
    <%= link_to "Connexion avec facebook", "/auth/facebook", id: "sign_in", class:"btn btn-primary-fb" %>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>



      <div class="form group">
  
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail"%>
      </div>

      <div class="from group">
   
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe"  %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="from group">
      <%= f.check_box :remember_me %> Se souvenir de moi
      
       </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Connexion", class: "btn btn-primary" %>
      </div>
    <% end %>

    </div>
    </div>
